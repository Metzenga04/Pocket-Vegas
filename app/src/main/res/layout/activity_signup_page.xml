<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/amarelo"
    tools:context=".SignUpPage">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:background="@drawable/custom_edit_text"
        android:orientation="vertical"
        app:cardCornerRadius="30dp"
        app:cardElevation="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="15dp"
            android:paddingTop="-20dp">


            <TextView
                android:id="@+id/signupTEXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="@string/sign_up"
                android:textAlignment="center"
                android:textColor="#0d0f13"
                android:textSize="36sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nameInputUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_edit_text"
                android:backgroundTint="#d4d4d4"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="@string/name"
                android:padding="8dp"
                android:textColor="@color/preto"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/surnameInputUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text"
                android:backgroundTint="#d4d4d4"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="@string/surname"
                android:padding="8dp"
                android:textColor="@color/preto"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/emailInputUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text"
                android:backgroundTint="#d4d4d4"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:hint="@string/e_mail"
                android:padding="8dp"
                android:textColor="@color/preto"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/passInputUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text"
                android:backgroundTint="#d4d4d4"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/preto"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/repassInputUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_edit_text"
                android:backgroundTint="#d4d4d4"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:hint="@string/re_password"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/preto"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="#0d0f13"
                android:text="@string/sign_up"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageSignUp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="675dp"
        android:background="@color/amarelo"
        android:src="@drawable/logo_casino"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_casino" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="69dp"
        android:layout_height="66dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="95dp"
        android:backgroundTint="@color/transparente"
        android:scaleType="fitCenter"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardSignUp"
        app:srcCompat="@drawable/backarrowblack" />

</androidx.constraintlayout.widget.ConstraintLayout>